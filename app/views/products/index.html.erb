<div class="w-full bg-gray-100 p-5">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-gray-200 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
      <%= notice %>
    </p>
  <% end %>

  <!-- New Product Button aligned to the right with blue background and white text -->
  <div class="flex justify-between items-center pb-6">
    <h1 class="text-lg font-bold text-3xl md:text-4xl">Books</h1>
    <%= link_to 'New Book', new_product_path, 
      class: "rounded-lg py-2 px-4 bg-blue-600 text-white font-medium shadow-lg hover:bg-blue-500 hover:shadow-xl transition-all ease-in-out duration-300" %>
  </div>

  <!-- Products Table -->
  <table id="books" class="mx-auto w-full border-collapse table-auto">
    <thead>
      <tr class="bg-gray-300 text-left">
        <th class="px-4 py-2">Image</th>
        <th class="px-4 py-2">Details</th>
        <th class="px-4 py-2">Price</th>
        <th class="px-4 py-2">Actions</th> <!-- Added Actions column -->
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr class="border border-black <%= cycle('bg-white', 'bg-gray-50') %>">
          <td class="px-2 py-3 w-1/4">
            <%= image_tag(product.image_url, class: 'w-full h-auto rounded-lg') %>
          </td>
          <td class="px-4 py-3">
            <h1 class="text-xl font-bold mb-2 border-b-2 border-gray-300 pb-1"><%= product.title %></h1>
            <p class="text-gray-700 mb-2"><%= product.description %></p> <!-- Display full description -->
          </td>
          <td class="px-4 py-3 text-right">
            <p class="text-lg font-bold text-green-600 mt-2"><%= number_to_currency(product.price) %></p>
          </td>
          <td class="px-4 py-3 text-right"> <!-- Actions column -->
            <ul class="space-y-2">
              <li>
                <%= link_to 'Edit', edit_product_path(product), class: 'text-yellow-500 hover:underline' %>
              </li>
              <li>
                <%= link_to 'Destroy', product, method: :delete, data: { confirm: "Are you sure?" }, class: 'text-red-500 hover:underline' %>
              </li>
            </ul>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
